h3 #{__i('user detail')}
hr
h1 #{user.name}
br
h4
	span [
		a(href='mailto:#{user.email}') #{user.email}
		]
br
if user.profile
	p #{user.profile}
	br
h5  #{__i('status')}: 
	h4 #{user.status}
if user.created
	br
	h5 #{__i('created')}: 
		h4 #{user.created}
br
h5 id: 
	h4 #{user._id}
hr
a(onclick='window.history.go(-1)', title='#{__i('back')}').adminButton.backButton
if session.user_id == 'superadmin' || session.user_id == user._id
	a(href='/users/edit/#{user._id}', title='#{__i('modify user')}').adminButton.modifyButton
	//- non si pu√≤ mai cancellare un utente se non dal suo form
		a(title='#{__i('delete user')}', onclick='if(confirm(#{__i("delete for sure?")})) window.location = "/users/delete/#{user._id}";').adminButton.deleteButton
	if user.status == 'private'
		div(title='private').adminIcon.privateButton
