hr
if element.author
	.outerContMinimal
		h6  #{__i('author')}: 
		.innerCont
			h5 
				if element.author.status == 'public'
					a(href='/users/#{element.author._id}', title='#{__i('view')}') #{element.author.name}
				else
					| private
	
.outerContMinimal
	h6  #{__i('status')}: 
	.innerCont
		h5 #{__i(element.status)}
	
	
if element.created
	.outerContMinimal
		h6 #{__i('created')}: 
		.innerCont
			h5 #{element.created}
		
		
.outerContMinimal
	h6 id: 
	.innerCont
		h5 #{element._id}
